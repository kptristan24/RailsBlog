<!--Nav Bar-->
<section class="section section-header bg-gray">
  <section class="grid-header container grid-480">
    <header class="navbar">
      <section class="navbar-section">
        <%= link_to 'Home', {controller: 'welcome'}, class: "btn btn-link"%>
        <%= link_to 'Posts', {controller: 'articles'}, class: "btn btn-link"%>
        <%= link_to 'Archive', {controller: 'articles', action:'archive'}, class: "btn btn-link"%>
      </section>
      <section class="navbar-center">
        <!-- centered logo or brand -->
      </section>
      <section class="navbar-section">
        <a href="http://tristanhari.io" class="btn btn-link">Bio</a>
        <a href="http://twitter.com/tristanhari" class="btn btn-link">Twitter</a>
        <a href="http://github.com/kptristan24" class="btn btn-link">GitHub</a>
      </section>
    </header>
  </section>
</section>

<!--Post Title-->
<p>
  <div class="article-title col-8 col-mx-auto">
    <h2><%= @article.title %></h2>
  </div>
</p>

<!--Article Body-->
<p>
  <div class="article-content col-8 col-mx-auto">
    <%= raw @article.text %>
  </div>
</p>

<div class="panel col-7 col-mx-auto">
  <div class="panel-header">
    <div class="panel-title h6">Comments</div>
  </div>
  <div class="panel-nav">
    <!-- navigation components: tabs, breadcrumbs or pagination -->
  </div>
  <div class="panel-body">
    <!-- contents -->
    <% @article.comments.each do |comment| %>
      <div class="tile">
        <div class="tile-icon">
          <figure class="avatar">
            <%= image_tag("av#{rand(3)}.png") %>
          </figure>
        </div>
        <div class="tile-content">
          <p class="tile-title"><%= comment.commenter %></p>
          <p class="tile-subtitle"><%= comment.body %></p>
        </div>
      </div>
    <% end %>
  </div>
  <div class="panel-footer">
    <!-- buttons or inputs -->
    <h2>Add a comment:</h2>
    <%= render 'comments/form' %>
  </div>
</div>

